<h2>Snippets</h2>

<table class="table table-hover">
  <head class="thead-light">
  </head>
  <body> 
    <ul class="list-group">
    {{#if viewData.snippets.length}}
    {{#each viewData.snippets}}
    <tr>
      <th scope="row">{{this.createdAt}}</th>
      <td>{{this.value}}</td>
    </tr>
    {{/each}}
    {{else}}
    <tr colspan="2">
      <td class="text-center">No snippets to display.</td>
    </tr>
    {{/if}}
      <!--<li class="list-group-item">Author: {{{author}}} <br> Code snippet: {{{snippet}}}</li>-->
      <!--<a href="/snippets/edit/{{this._id}}">Edit</a>-->
        <!--<a href="/snippets/delete/{{this._id}}">Delete</a>-->
    </ul>
  </body>
</table>